<% if flash[:notice] %>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
<% end %>

<h1 class="books">Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id), class: "show_#{book.id}" %></td>
    <td><%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %></td>
    <td><%= link_to "Destroy", destroy_book_path(book.id), class: "destroy_#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
<% end %>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<P class="toukou-title">Title</P>
	<%= f.text_field :title, class: "book_title" %>

	<P class="toukou-body">Body</P>
	<%= f.text_area :body, class: "book_body" %>

    <P class="toukou-submit"></P>
	<%= f.submit 'Create Book' %>

<% end %>
