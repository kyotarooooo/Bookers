<section class=show-box>
	<% if flash[:notice] %>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
	<% end %>


	<h5 class=show-text>Title:<span><%= @book.title %></span></h5>
	<h5 class=show-text>Body:<span><%= @book.body %></span></h5>

<div class="bottom-box2">
		<p class="bottom-box3"><%= link_to "edit", edit_book_path(@book.id), class: "edit_#{@book.id}" %></p>
		<p class="line">|</p>
		<p class="bottom-box3"><%= link_to "back", books_path, class: "back" %></p>
</div>
</section>